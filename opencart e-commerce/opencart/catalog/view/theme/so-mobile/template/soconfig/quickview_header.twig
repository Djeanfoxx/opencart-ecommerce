	<style type="text/css">
		{% if soconfig.get_settings('body_status') == 'google' %} {{ (soconfig.get_settings('selector_body')|raw~'{font-family:'~ soconfig.get_settings('family_body')~'}') }}
		{% else %}  {{ soconfig.get_settings('selector_body')|raw~'{font-family:'~ soconfig.get_settings('normal_body')~'}' }}{% endif %} 
	</style>
{% endif %} 
{% if soconfig.get_settings('selector_menu') %}
	<style type="text/css">
		{% if soconfig.get_settings('menu_status') == 'google' %} {{ (soconfig.get_settings('selector_menu')|raw~'{font-family:'~ soconfig.get_settings('family_menu')~'}') }}
		{% else %}  {{ soconfig.get_settings('selector_menu')|raw~'{font-family:'~ soconfig.get_settings('normal_menu')~'}' }}{% endif %} 
	</style>
{% endif %} 
{% if soconfig.get_settings('selector_heading') %}
	<style type="text/css">
		{% if soconfig.get_settings('menu_status') == 'google' %} {{ (soconfig.get_settings('selector_heading')|raw~'{font-family:'~ soconfig.get_settings('family_heading')~'}') }}
		{% else %}  {{ soconfig.get_settings('selector_heading')|raw~'{font-family:'~ soconfig.get_settings('normal_heading')~'}' }}{% endif %} 
	</style>
{% endif %} 

