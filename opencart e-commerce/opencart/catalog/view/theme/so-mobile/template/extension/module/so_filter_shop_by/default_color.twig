<li class="so-filter-options" data-option="{{ item[0] }}">
	<div class="so-filter-heading">
		<div class="so-filter-heading-text">
			<span>{{ item[0] }}</span>
		</div>
		<i class="fa fa-chevron-down"></i>
	</div>

	<div class="so-filter-content-opts">
		<div class="so-filter-content-opts-container">
			<ul>
				{% for value in values %}
					{% if opt_id|length > 0 and opt_id != "" %}
						{% set class = value.opt_value_id in opt_id|split(',') == true ? 'opt_active' : '' %}
					{% else %}
						{% set class = "" %}
					{% endif %}
					<li class="so-filter-option opt-select {{ class }} {{ value.opt_count_product > 0 ? 'opt_enable' : 'opt_disable' }}" data-type="option" data-option_value= "{{ value.opt_value_id }}" data-count_product= "{{ value.opt_count_product }}" data-list_product="{{ value.opt_list_product }}">
						<label title="{{ value.opt_value_name }}">
							<img src="{{ value.opt_value_image }}">
						</label>
						<div class="option-count"><span>{{ value.opt_count_product }}</span></div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</li>
