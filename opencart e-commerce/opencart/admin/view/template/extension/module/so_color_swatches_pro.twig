{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
    	<div class="container-fluid">
      		<div class="pull-right">
        		<button type="submit" form="form-so-color-swatch" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i> {{ button_save }}</button>
        		<a class="btn btn-success1" onclick="$('#action').val('save_edit');$('#form-so-color-swatch').submit();" data-toggle="tooltip" title="{{ objlang.get('button_savestay') }}" ><i class="fa fa-pencil-square-o"></i> {{ objlang.get('button_savestay') }}</a>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-danger"><i class="fa fa-reply"></i> {{ button_cancel }}</a>
        	</div>
			<h1>{{ heading_title }}</h1>
      		<ul class="breadcrumb">
        		{% for breadcrumb in breadcrumbs %}
        			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        		{% endfor %}
      		</ul>
    	</div>
  	</div>
  	<div class="container-fluid">
  		{% if error_warning %}
    		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      			<button type="button" class="close" data-dismiss="alert">&times;</button>
    		</div>
    	{% endif %}
    	{% if success %}
    		<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      			<button type="button" class="close" data-dismiss="alert">&times;</button>
    		</div>
    	{% endif %}
    	<div class="panel panel-default">
      		<div class="panel-heading">
        		<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      		</div>
      		<div class="panel-body">
      			<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-so-color-swatch" class="form-horizontal">
      				<input type="hidden" name="action" id="action" value=""/>
                    <h3 style="padding:5px 10px;">{{ objlang.get('entry_general_settings') }}</h3>
      				<div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_so_color_swatches_pro_status" id="input-status" class="form-control">
                                {% if status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-option">{{ objlang.get('entry_option') }}</label>
                        <div class="col-sm-10">
                            <select name="module_so_color_swatches_pro_option" id="input-option" class="form-control">
                                {% for selected in option_selected %}
                                    {% if color_swatch_option == selected.option_id %}
                                        <option value="{{ selected.option_id }}" selected="selected">{{ selected.name }}</option>
                                    {% else %}
                                        <option value="{{ selected.option_id }}">{{ selected.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-type">{{ objlang.get('entry_type') }}</label>
                        <div class="col-sm-10">
                            <select name="module_so_color_swatches_pro_type" id="input-type" class="form-control">
                                {% if colorswatch_type == 'hover' %}
                                    <option value="hover" selected="selected">{{ text_hover }}</option>
                                    <option value="click">{{ text_click }}</option>
                                {% else %}
                                    <option value="hover">{{ text_hover }}</option>
                                    <option value="click" selected="selected">{{ text_click }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <h3 style="padding:5px 10px;">{{ objlang.get('entry_product_list') }}</h3>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-enable_product_list">{{ objlang.get('entry_enable') }}</label>
                        <div class="col-sm-10">
                            <select name="module_so_color_swatches_pro_enable_product_list" id="input-enable_product_list" class="form-control">
                                {% if enable_product_list %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-width_product_list">{{ objlang.get('entry_icon_swatch_width') }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_so_color_swatches_pro_width_product_list" value="{{ width_product_list }}" id="input-width_product_list" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
			            <label class="col-sm-2 control-label" for="input-height_product_list">{{ objlang.get('entry_icon_swatch_height') }}</label>
			            <div class="col-sm-10">
			              	<input type="text" name="module_so_color_swatches_pro_height_product_list" value="{{ height_product_list }}" id="input-height_product_list" class="form-control" />
			            </div>
		          	</div>
                    <h3 style="padding:5px 10px;">{{ objlang.get('entry_product_page') }}</h3>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-enable_product_page">{{ objlang.get('entry_enable') }}</label>
                        <div class="col-sm-10">
                            <select name="module_so_color_swatches_pro_enable_product_page" id="input-enable_product_page" class="form-control">
                                {% if enable_product_page %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-width_product_page">{{ objlang.get('entry_icon_swatch_width') }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_so_color_swatches_pro_width_product_page" value="{{ width_product_page }}" id="input-width_product_page" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-height_product_page">{{ objlang.get('entry_icon_swatch_height') }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_so_color_swatches_pro_height_product_page" value="{{ height_product_page }}" id="input-height_product_page" class="form-control" />
                        </div>
                    </div>
      			</form>
      		</div>
      	</div>
  	</div>
</div>
<style>
.btn-success {
	background-color: #fff;
	color: #000;
	border-color: #ddd;
}
.btn-success1 {
    background-color: #8fbb6c;
    border-color: #7aae50;
    color: #fff;
}
.btn-success1:hover {
	background-color: #648e42;
    border-color: #3d5728;
    color: #fff;
}
</style>
{{ footer }}